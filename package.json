{
  "name": "billing-app",
  "version": "1.0.0",
  "main": "electron/main.js",
  "scripts": {
    "build-ui": "cd frontend && npm run build",
    "start": "electron .",
    "dist": "npm run build-ui && electron-builder"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.jewellery.billing",
    "productName": "Jewellery Billing",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "frontend/build/**/*",
      "backend/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "forceCodeSigning": false
    }
  }
}
